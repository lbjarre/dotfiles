[user]
	name = Lukas Bjarre
	email = lukas.bjarre@gmail.com
	signingkey = <KEY>
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	pager = delta
[alias]
	graph = log --graph --all --pretty=format:\"%C(auto)%h %C(auto,bold)%<(60)%s (%C(blue)%an%C(reset), %C(green)%ar%C(reset)) %C(auto)%d%C(reset)\"
	merged-branches = ! git branch --merged | gegrep -v '\\* .*|  develop|  master'
	dmerged = ! git merged-branches | xargs git branch -d
	st = status
	co = commit
	a = add
	ch = checkout
	chb = checkout -b
	pfwl = push --force-with-lease
	amend = commit --amend --no-edit
[push]
	followTags = true
	default = current
[commit]
	gpgsign = true
[merge]
	tool = vimdiff
	ff = false
[pull]
	rebase = true
[delta]
	syntax-theme = base16
	side-by-side = true
	navigate = true

